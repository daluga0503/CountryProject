<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location"
    app:startDestination="@id/locationListFragment">

    <fragment
        android:id="@+id/locationListFragment"
        android:name="com.example.countriesproject.ui.location.LocationListFragment"
        android:label="fragment_location_list"
        tools:layout="@layout/fragment_location_list" >
        <action
            android:id="@+id/action_locationListFragment_to_ciudadFragment"
            app:destination="@id/ciudadFragment" />
    </fragment>
    <fragment
        android:id="@+id/ciudadFragment"
        android:name="com.example.countriesproject.ui.ciudad.CiudadFragment"
        android:label="fragment_ciudad"
        tools:layout="@layout/fragment_ciudad" />
</navigation>
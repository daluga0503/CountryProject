<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:id="@+id/cityCard"

    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="59dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="20dp"
            android:text="@string/visitadoPais"
            app:layout_constraintBottom_toTopOf="@+id/country_name"
            app:layout_constraintStart_toStartOf="@+id/country_name">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="20dp"
            android:text="@string/visitadoCiudad"
            app:layout_constraintBottom_toTopOf="@+id/city_name"
            app:layout_constraintStart_toStartOf="@+id/city_name">

        </TextView>

        <TextView
            android:id="@+id/city_name"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="169dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="52dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:text="Málaga" />

        <TextView
            android:id="@+id/country_name"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="162dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/city_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:text="España" />

        <Button
            android:id="@+id/compartirButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="32dp"
            android:text="@string/botonCompartir"
            app:icon="@drawable/share"
            app:layout_constraintEnd_toEndOf="@+id/country_name"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toStartOf="@+id/city_name"
            app:layout_constraintTop_toTopOf="@+id/city_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
